{
    "default": {
      "paths": [
        "src/test/features/"
      ],
      "formatOptions": {
        "snippetInterface": "async-await"
      },
      "dryRun": false,
      "require": [
        "src/test/steps/*.ts",
        "src/hooks/hooks.ts"
      ],
      "requireModule": [
        "ts-node/register"
      ],
      "format": [
        "progress-bar",
        "html:test-results/cucumber-report.html",
        "json:test-results/cucumber-report.json"
      ],
      "parallel": 1
    }
  }